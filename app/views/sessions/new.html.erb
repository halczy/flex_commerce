<%= provide :title, t('.title') %>

<div class="container">
  <div class="row justify-content-lg-center mt-5">
    <div class="col-lg-6">
      <div class="card">
        <div class="card-header text-center">
          <h4><%= yield(:title) %></h4>
        </div>
        <div class="card-body">
          <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
            <div class="form-group">
              <%= f.text_field :ident, placeholder: t('.ident'),
                               class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.password_field :password, placeholder: t('.password'),
                                   class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :remember_me, class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= t('.remember_me') %></span>
              <% end %>
            </div>

              <%= f.submit t('.submit'), class: 'btn btn-block btn-primary' %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



