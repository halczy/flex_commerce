<%= provide :title, 'Sign In' %>

<div class="container">
  <div class="d-flex justify-content-center" id="signin">
    <div class="card w-50">
      <div class="card-header text-center">
        <h4>Sign In</h4>
      </div>
      <div class="card-body">
        <%= form_with(scope: :session, url: sessions_path, local: true) do |f| %>
          <div class="form-group">
            <%= f.text_field :ident, placeholder: 'Email / Phone Number / Member ID',
                             class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.password_field :password, placeholder: 'Password',
                                 class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :remember_me, class: "checkbox inline" do %>
              <%= f.check_box :remember_me %>
              <span>Remember Me</span>
            <% end %>
          </div>

            <%= f.submit 'Submit', class: 'btn btn-block btn-primary' %>
        <% end %>
      </div>
    </div>
  </div>
</div>



