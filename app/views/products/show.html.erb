<%= provide :title, t('.product_detail') %>
<%= render 'shared/header_breadcrumb', title: yield(:title),
            breadcrumb: build_product_breadcrumb(@product)%>

<div class="container mt-3">
  <div class="row">
    <div class="col-12 col-md-6 mb-3">
      <%= render 'images_display', images: @images, cache: true %>
    </div>
    <div class="col-12 col-md-6">
      <%= render 'purchase_info', product: @product %>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <%= render 'descriptions', product: @product %>
    </div>
  </div>
</div>

<%= javascript_include_tag 'product_cart', 'data-turbolinks-track': 'reload' %>
