<%= provide :title, t('.images') %>

<div class="row">
  <div class="col-lg-12">
    <%= render 'shared/paginate', objects: @images if @images.present? %>
    <table class="table table-hover table-responsive">
      <thead>
        <tr>
          <th><%= t('.title') %></th>
          <th><%= t('.type') %></th>
          <th><%= t('.image') %></th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @images.each do |image| %>
          <tr>
            <td><%= image.title %></td>
            <td><%= I18n.t image.imageable_type.try(:capitalize) %></td>
            <td><%= image_tag image.image_url(:thumb), class: 'img-fluid' %></td>
            <td>
              <%= link_to t('.detail'), admin_image_path(image),
                                        class: 'btn btn-sm btn-info' %>
            </td>
            <td>
              <%= link_to t('.delete'), admin_image_path(image), method: :delete,
                                    data: { confirm: 'Are you sure?' },
                                    class: 'btn btn-sm btn-danger' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= render 'shared/paginate', objects: @images if @images.present? %>
  </div>
</div>
