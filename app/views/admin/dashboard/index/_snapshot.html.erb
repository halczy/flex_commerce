<div class="card-deck">
  <div class="card text-white bg-success p-3 mb-3">
    <div class="card-block">
      <div class="row">
        <div class="col-lg-4 text-center">
          <i class="fa fa-file-text fa-5x"></i>
        </div>
        <div class="col-lg-8 text-center">
          <h3>Orders</h3>
          <h3><%= Order.count %></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="card text-white bg-info p-3 mb-3">
    <div class="card-block">
      <div class="row">
        <div class="col-lg-4 text-center">
          <i class="fa fa-users fa-5x"></i>
        </div>
        <div class="col-lg-8 text-center">
          <h3>Users</h3>
          <h3><%= User.count %></h3>
        </div>
      </div>
    </div>
  </div>
  <div class="card text-white bg-primary p-3 mb-3">
    <div class="card-block">
      <div class="row">
        <div class="col-lg-4 text-center">
          <i class="fa fa-barcode fa-5x"></i>
        </div>
        <div class="col-lg-8 text-center">
          <h3>Products</h3>
          <h3><%= Product.count %></h3>
        </div>
      </div>
    </div>
  </div>
</div>
