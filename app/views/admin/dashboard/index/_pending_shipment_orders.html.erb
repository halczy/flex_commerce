<% @pd_shipment_orders.each do |order|%>
  <div class="col-md-4">
    <div class="card bg-light mb-3">
      <div class="card-header d-flex justify-content-between">
        <div><%= t('.title') %></div>
        <%= link_to t('.ship_order'), admin_order_path(order),
                                      class: 'btn btn-primary btn-sm' %>
      </div>
      <div class="card-body">
        <div class="mb-2">
          <%= t('.customer_name') %>: <%= order.user.name %>
        </div>
        <strong><%= t('.shipment') %>:</strong>
        <div>
          <% if get_delivery_method(order).present? %>
            <%= t('.require_delivery') %>
          <% end %>
        </div>
        <div>
          <% if get_self_pickup_method(order).present? %>
            <%= t('.request_self_pickup') %>
          <% end %>
        </div>
        <div>
          <%= t('.items') %>: <%= order.inventories.count %>
        </div>
      </div>
    </div>
  </div>
<% end %>
