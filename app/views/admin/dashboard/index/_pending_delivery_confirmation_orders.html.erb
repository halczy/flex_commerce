<% @pd_delivery_orders.each do |order|%>
  <div class="col-md-4">
    <div class="card bg-light mb-3">
      <div class="card-header d-flex justify-content-between">
        <div>Pending Delivery Confirm.</div>
        <%= link_to 'Confirm Delivery', admin_order_path(order),
                                    class: 'btn btn-info btn-sm' %>
      </div>
      <div class="card-body">
        <div class="mb-2">
          Customer Name: <%= order.user.name %>
        </div>
        <strong>Shipment:</strong>
        <div>
          <%= order.shipping_company %> <%= order.tracking_number %>
        <div>
          Shipped At:
          <%= DateTime.parse(order.shipped_at).strftime("%Y/%m/%d") %>
        </div>
      </div>
    </div>
  </div>
<% end %>
