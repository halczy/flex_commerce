<% if Product.out_of_stock.count > 6 %>
  <div class="row">
    <div class="col-12 jumbotron mb-3 p-2">
      <div class="d-flex justify-content-center align-content-center">
        <div>
          <strong class="mr-3">
            <%= Product.out_of_stock.count %> Out of Stock Products
          </strong>
          <%= link_to 'See All', admin_products_path(display: 'out_of_stock'),
                                 class: 'btn btn-info btn-sm' %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <% @oos_products.each do |product|%>
    <div class="col-md-4">
      <div class="card bg-light mb-3">
        <div class="card-header d-flex justify-content-between">
          <div>Out of Stock</div>
          <%= link_to 'Manage Inventories', inventories_admin_product_path(product),
                                            class: 'btn btn-warning btn-sm' %>
        </div>
        <div class="card-body">
          <div>
            Product Name:
            <%= product.name %>
          </div>
            Total Inventories:
            <%= product.inventories.count %>
          <div>
            In Cart Inventories:
            <%= product.inventories.in_cart.count %>
          </div>
          <div>
            In Order Inventories:
            <%= product.inventories.in_order.count %>
          </div>
          <div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if @oos_products.empty? %>
  <div class="row">
    <div class="col-12 jumbotron">
      <div class="d-flex justify-content-center">
        <div>
          <h5 class="mb-3">No Products Pending Action</h5>
        </div>
      </div>
    </div>
  </div>
<% end %>
