<%= form_with(url: admin_geos_path, local: true, method: :get) do |form| %>
  <%= form.select :geo_filter, options_for_select([
                  [t('.no_filter'), ''],
                  [t('.country_region'), 'country_region'],
                  [t('.province_state'), 'province_state'],
                  [t('.city'), 'city'],
                  [t('.district'), 'district'],
                  [t('.community'), 'community']]),
                  { prompt: t('.filter_geo_data') },
                  class: 'form-control', onchange: 'this.form.submit();' %>
<% end %>
