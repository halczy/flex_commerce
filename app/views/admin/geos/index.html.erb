<%= provide :title, t('.title') %>

<div class="d-flex justify-content-start mb-3 mt-3">
  <div>
    <%= link_to admin_shipping_methods_path, class: 'btn btn-secondary' do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i> <%= t('.return') %>
    <% end %>
  </div>
  <div class="ml-2">
    <%= render 'filter' %>
  </div>
  <div class="ml-auto">
    <%= render 'search_form' %>
  </div>
</div>

<div class="row">
  <%= render 'shared/paginate', objects: @geos if @geos.present? %>
  <div class="col-lg-12">
    <p><%= t('.geo_count') %>: <%= @geos.total_count %></p>
    <%= render 'geos', geos: @geos %>
  </div>
  <%= render 'shared/paginate', objects: @geos if @geos.present? %>
</div>
