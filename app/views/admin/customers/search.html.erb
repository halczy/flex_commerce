<%= provide :title, "Customer Search" %>

<div class="d-flex justify-content-start mb-3 mt-3">
  <div>
    <%= link_to admin_customers_path, class: 'btn btn-info' do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i> Return to List
    <% end %>
  </div>
  <div class="ml-auto">
    <%= render 'search_form' %>
  </div>
</div>

<div class="row">
  <% if @search_result.present? %>
    <%= render 'shared/paginate', objects: @search_result %>
    <div class="col-lg-12">
      <strong>Result: </strong>
      <small><em><%= @search_run.count %> Matching Customers</em></small>
      <%= render 'customers', customers: @search_result %>
    </div>
    <%= render 'shared/paginate', objects: @search_result %>
  <% else %>
    <div class="col-12">
      <div class="jumbotron">
        <h5 class="text-center">No Matching Cusotmer Found</h5>
      </div>
    </div>
  <% end %>
</div>
