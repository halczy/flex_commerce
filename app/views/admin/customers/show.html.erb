<%= provide :title, 'Customer Detail' %>

<div class="d-flex justify-content-start mb-3 mt-3">
  <div>
    <%= link_to admin_customers_path, class: 'btn btn-secondary' do %>
      <i class="fa fa-arrow-left" aria-hidden="true"></i> Return to List
    <% end %>
  </div>
  <div class='ml-2'>
    <%= link_to 'Edit Customer', edit_admin_customer_path(@customer),
                        class: 'btn btn-warning'  %>
  </div>
  <div class="ml-2">
    <%= link_to 'Customer Orders',
                search_admin_orders_path(search_term: @customer.id),
                class: 'btn btn-success' %>
  </div>
  <div class="ml-2">
    <%= link_to 'Deposit Credit', '#', class: 'btn btn-primary',
          data: { toggle: "modal", target: "#deposit_#{@customer.id}"}  %>
    <%= render 'admin/customers/show/deposit' %>
  </div>
</div>

<div class="row">
  <%= render 'admin/customers/show/basic' %>
  <%= render 'admin/customers/show/wallet' %>
</div>
