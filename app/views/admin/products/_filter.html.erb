<%= form_with(url: admin_products_path, local: true, method: :get) do |form| %>
  <%= form.select :display, options_for_select([
                  [t('.no_filter'), ''],
                  [t('.in_stock'), 'in_stock'], 
                  [t('.out_of_stock'), 'out_of_stock']]),
                  { prompt: t('.filter_products') },
                  class: 'form-control', onchange: 'this.form.submit();' %>
<% end %>