<%= form_with(url: search_admin_products_path, class: 'form-inline',
              local: true, method: :get) do |form| %>

  <%= form.label :search_term, class: 'sr-only' %>
  <%= form.search_field :search_term, value: "#{params[:search_term]}", class: "form-control" %>

  <span class="input-group-btn">
    <%= form.submit 'Search', class: 'btn btn-success' %>
  </span>
<% end %>
