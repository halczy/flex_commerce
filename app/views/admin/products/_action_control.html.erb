<td>
  <%= link_to 'Edit', edit_admin_product_path(product), id: "edit_#{product.id}",
                      class: 'btn btn-sm btn-warning' %>
</td>
<td>
  <%= link_to 'Delete', '#', class: 'btn btn-sm btn-danger',
              id: "btn_del_#{product.id}",
              data: { toggle: "modal", target: "#delete_#{product.id}"} %>
</td>

<div class="modal fade" id="delete_<%= product.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Product</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if product.destroyable? %>
          <p>
            Please confirm that you want to delete this product.
            <li>
              <strong><%= product.name %></strong>
            </li>
          </p>
        <% else %>
          <p>
            The following product cannot be <strong>deleted</strong>.
            Please confirm that you want to <strong>disable</strong>
            this product.
            <li>
              <strong><%= product.name %></strong>
            </li>
          </p>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= link_to 'Confirm', admin_product_path(product), method: :delete,
                               id: "confirm_del_#{product.id}",
                               class: 'btn btn-danger' %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
