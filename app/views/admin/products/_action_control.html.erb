<td>
  <%= link_to t('.edit'), edit_admin_product_path(product), 
                          id: "edit_#{product.id}",
                          class: 'btn btn-sm btn-warning' %>
</td>
<td>
  <%= link_to t('.delete'), '#', class: 'btn btn-sm btn-danger',
                            id: "btn_del_#{product.id}",
                            data: { toggle: "modal", 
                                    target: "#delete_#{product.id}"} %>
</td>

<div class="modal fade" id="delete_<%= product.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('.delete_product') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if product.destroyable? %>
          <p>
            <%= t('.delete_msg') %>
            <li>
              <strong><%= product.name %></strong>
            </li>
          </p>
        <% else %>
          <p>
            <%= t('.delete_warning') %>
            <li>
              <strong><%= product.name %></strong>
            </li>
          </p>
        <% end %>
      </div>
      <div class="modal-footer">
        <%= link_to t('.confirm'), admin_product_path(product), method: :delete,
                                   id: "confirm_del_#{product.id}",
                                   class: 'btn btn-danger' %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          <%= t('.close') %>
        </button>
      </div>
    </div>
  </div>
</div>
