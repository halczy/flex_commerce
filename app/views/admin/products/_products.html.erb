<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th class="w-25">Name</th>
      <th>SKU</th>
      <th>Member Price</th>
      <th>Reward Price</th>
      <th>Strict Inv.</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% products.each do |p| %>
    <tr>
      <td>
        <%= link_to p.id, admin_product_path(p) %>
      </td>
      <td>
        <%= link_to p.name, admin_product_path(p) %>
      </td>
      <td>
        <%= p.sku %>
      </td>
      <td>
        <%= humanized_money_with_symbol(p.price_market) %>
      </td>
      <td>
        <%= humanized_money_with_symbol(p.price_reward) %>
      </td>
      <td>
        <%= p.strict_inventory %>
      </td>
      <td>
        <%= link_to 'Edit', edit_admin_product_path(p), id: "edit_#{p.id}",
                            class: 'btn btn-sm btn-warning' %>
      </td>
      <td>
        <%= link_to 'Delete', '#', class: 'btn btn-sm btn-danger' %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
