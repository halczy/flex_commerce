<table class="table table-hover mt-3">
  <thead>
    <tr>
      <th class="w-50">ID</th>
      <th>Status</th>
      <th>In Order</th>
      <th>Customer</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% if inventories.present? %>
      <% inventories.each do |inventory| %>
      <tr>
        <td><%= link_to inventory.id, '#' %></td>
        <td><%= inventory.status %></td>
        <td></td>
        <td></td>
        <td>
          Delete
        </td>
      </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="6" class="text-center">
          No Matching Inventories
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
