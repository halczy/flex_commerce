<%= provide :title, 'Application Configurations' %>

<table class="table table-hover borderless">
  <thead class='thead-inverse'>
    <tr>
      <th>Name</th>
      <th>Unencrypt Value</th>
      <th>Encrypted Value</th>
      <th>Boolean Value</th>
      <th colspan='2'></th>
    </tr>
  </thead>
  <tbody>
    <% @app_configs.each do |app_config| %>
      <tr>
        <td><%= app_config.name %></td>
        <td><%= app_config.plain %></td>
        <td><%= app_config.value %></td>
        <td><%= app_config.status.try(:titleize) %></td>
        <td>
          <%= link_to 'Edit', edit_admin_application_configuration_path(app_config),
                              class: 'btn btn-warning btn-sm' %>
        </td>
        <td>
          <%= render 'action_delete', app_config: app_config %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
