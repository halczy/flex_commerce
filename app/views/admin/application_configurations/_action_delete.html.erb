<%= link_to 'Delete', '#', class: 'btn btn-sm btn-danger',
            id: "btn_del_#{app_config.id}",
            data: { toggle: "modal", target: "#delete_#{app_config.id}"} %>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="delete_<%= app_config.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Application Configuration</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Please confirm that you want to delete this Application Configuration.</p>
        <p>
          <strong>
            Caution: Removing application configuration may cause the site to
            crash.
          </strong>
        </p>
        <ul>
          <li><%= app_config.name %></li>
        </ul>
      </div>
      <div class="modal-footer">
        <%= link_to 'Confirm', admin_application_configuration_path(app_config),
                               method: :delete,
                               id: "confirm_del_#{app_config.id}",
                               class: 'btn btn-danger' %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
