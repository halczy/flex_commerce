<%= provide :title, 'Edit Application Configurations' %>

<%= form_with model: [:admin, @app_config], local: true do |f| %>

  <%= render 'shared/error_messages', object: f.object %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :plain, 'Unencrypt Value' %>
    <%= f.text_field :plain, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :value, 'Encrypted Value' %>
    <%= f.text_field :value, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :status, 'Boolean Value' %>
    <%= f.select :status, options_for_select([['False', 0],
                                              ['True',  1]]),
                          {}, class: 'form-control' %>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit class: 'btn btn-primary' %>
  </div>

<% end %>
