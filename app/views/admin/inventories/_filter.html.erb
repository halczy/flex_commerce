<%= form_with(url: admin_inventories_path, local: true, method: :get) do |form| %>
  <%= form.select :status, options_for_select([
                  ['No Filter', ''],
                  ['Unsold', 'unsold'],
                  ['In Cart', 'in_cart'],
                  ['In Order', 'in_order'],
                  ['In Checkout', 'in_checkout'],
                  ['Sold', 'sold'],
                  ['Returned', 'returned']]),
                  { prompt: "Filter Inventories" },
                  class: 'form-control', onchange: 'this.form.submit();' %>
<% end %>
