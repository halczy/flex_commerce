<td>
  <%= link_to t('.delete'), '#', class: 'btn btn-sm btn-danger',
              id: "btn_del_#{inventory.id}",
              data: { toggle: "modal", target: "#delete_#{inventory.id}"} %>
</td>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="delete_<%= inventory.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('.delete_inventory') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if inventory.status_before_type_cast <= 2 %>
          <p><%= t('.confirm_msg') %></p>
        <% else %>
          <p>
            <%= t('.warning_msg_1') %>
            <strong><%= inventory.translated_status %></strong>.
            <%= t('.warning_msg_2') %>
          </p>
        <% end %>
      </div>
      <div class="modal-footer">
        <% if inventory.status_before_type_cast <= 2 %>
          <%= link_to t('.confirm'), admin_inventory_path(inventory,
                                     return_back: true),
                                     method: :delete,
                                     id: "confirm_del_#{inventory.id}",
                                     class: 'btn btn-danger' %>
        <% end %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          <%= t('.close') %>
        </button>
      </div>
    </div>
  </div>
</div>
