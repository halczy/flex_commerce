<%= form_with(url: products_view_admin_inventories_path, local: true, method: :get) do |form| %>
  <%= form.select :inv_status, options_for_select([
                  ['No Filter', ''],
                  ['In Stock', 'in_stock'], 
                  ['Out of Stock', 'out_of_stock']]),
                  { prompt: "Filter Products" },
                  class: 'form-control', onchange: 'this.form.submit();' %>
<% end %>