<td>
  <%= link_to 'Detail', admin_inventory_path(inventory),
                        class: 'btn btn-sm btn-info' %>
</td>
<td>
  <%= link_to 'Delete', '#', class: 'btn btn-sm btn-danger',
              id: "btn_del_#{inventory.id}",
              data: { toggle: "modal", target: "#delete_#{inventory.id}"} %>
</td>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="delete_<%= inventory.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete Inventory</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if inventory.status_before_type_cast <= 2 %>
          <p>Please confirm that you want to delete this inventory.</p>
        <% else %>
          <p>
            This inventory has a status of <strong><%= inventory.status %></strong>.
            You cannot delete this inventory.
          </p>
        <% end %>
      </div>
      <div class="modal-footer">
        <% if inventory.status_before_type_cast <= 2 %>
          <%= link_to 'Confirm', admin_inventory_path(inventory), method: :delete,
                                 id: "confirm_del_#{inventory.id}",
                                 class: 'btn btn-danger' %>
        <% end %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          Close
        </button>
      </div>
    </div>
  </div>
</div>
