<table class="table table-hover">
  <thead>
    <tr>
      <th><%= t('.name') %></th>
      <th><%= t('.type') %></th>
      <th><%= t('.rate_items') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% shipping_methods.each do |shipping_method| %>
    <tr>
      <td>
        <%= link_to shipping_method.name, admin_shipping_method_path(shipping_method) %>
      </td>
      <td><%= shipping_method.variety.titleize %></td>
      <td><%= shipping_method.shipping_rates.count %></td>
      <%= render 'action_control', shipping_method: shipping_method %>
    </tr>
    <% end %>
    <% if shipping_methods.empty? %>
      <tr><td colspan="5"><%= t('.no_record') %></td></tr>
    <% end %>
  </tbody>
</table>
