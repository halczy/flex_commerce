<div class="row">
  <div class="col-md-12">
    <%= form_with(model: @category, url: admin_categories_path, local: true) do |f| %>

      <%= render 'shared/error_messages', object: f.object %>

      <div class="form-group">
        <%= f.label :parent_id, 'Parent Category' %>
          <%= f.number_field :parent_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :display_order, 'Display Order' %>
          <%= f.number_field :display_order, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :hide %>
          <%= f.select :hide, options_for_select([['True', 1], ['False', 0]]),
                       {}, class: "form-control" %>
      </div>

      <%= f.submit class: 'btn btn-block btn-primary' %>
    <% end %>
  </div>
</div>
