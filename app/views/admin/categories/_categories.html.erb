<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3" class="text-center"><%= t('.order') %></th>
      <th class="w-50"><%= t('.name') %></th>
      <th><%= t('.type') %></th>
      <th><%= t('.products') %></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% categories.order(display_order: :asc).each do |cat| %>
      <tr>
        <%= render 'order_control', cat: cat %>
        <td><%= link_to cat.name, admin_category_path(cat) %></td>
        <td><%= cat.flavor.capitalize %></td>
        <td><%= cat.products.count %></td>
        <td>
          <%= link_to t('.show_details'), admin_category_path(cat),
                                          class: 'btn btn-sm btn-info' %>
        </td>
        <td>
          <%= link_to t('.edit'), edit_admin_category_path(cat),
                                  class: 'btn btn-sm btn-warning' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
