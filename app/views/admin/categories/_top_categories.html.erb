<table class="table table-hover">
  <thead>
    <tr>
      <th colspan="3" class="text-center"><%= t('.order') %></th>
      <th class="w-50"><%= t('.name') %></th>
      <th><%= t('.hidden') %></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% categories.each do |cat| %>
      <tr class="table-info">
        <%= render 'order_control', cat: cat %>
        <td>
          <i class="fa fa-arrow-circle-down mr-2" aria-hidden="true"></i>
          <%= link_to cat.name, admin_category_path(cat) %>
        </td>
        <td><%= cat.hide %></td>
        <%= render 'action_control', cat: cat %>
      </tr>
      <%= render 'child_categories', child_categories: cat.child_categories %>
    <% end %>
  </tbody>
</table>
