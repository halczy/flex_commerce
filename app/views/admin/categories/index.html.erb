<%= provide :title, 'Categories' %>

<div class="row">
  <div class="col-md-12">
    <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
      <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
      New Category
    <% end %>
  </div>

  <div class="col-lg-12">
    <h5 class="mt-5">Top Level Categories (Menu)</h5>
    <%= render partial: 'top_cats', locals: {top_level: @top_level} %>
  </div>

  <div class="col-md-12">
    <h5 class="mt-5">All Categories</h5>
    <%= render partial: 'all_cats', locals: {categories: @categories} %>
  </div>
</div>
