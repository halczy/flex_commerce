<%= provide :title, 'Categories' %>

<div class="d-flex justify-content-start mb-3">
  <div class="p-2">
    <%= link_to new_admin_category_path, class: "btn btn-primary" do %>
      <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
      New Category
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h3>Regular Categories</h3>
    <%= render 'top_categories', categories: @top_level %>
  </div>

  <div class="col-lg-12 mt-3 mb-5">
    <h3>Special Categories</h3>
    <%= render 'special_categories', categories: @special %>
  </div>
</div>
