<%= provide :title, t('.title') %>

<div class="d-flex justify-content-start mb-3 mt-3">
  <div>
    <%= link_to new_admin_category_path(regular: true), class: "btn btn-primary" do %>
      <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
      <%= t('.new_reg_cat') %>
    <% end %>
  </div>
  <div class="ml-2">
    <%= link_to new_admin_category_path(brand: true), class: "btn btn-primary" do %>
      <i class="fa fa-plus fa-lg" aria-hidden="true"></i>
      <%= t('.new_brand_cat') %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <h3><%= t('.regular_cats') %></h3>
    <%= render 'top_categories', categories: @top_level %>
  </div>

  <div class="col-lg-12 mt-3 mb-5">
    <h3><%= t('.brand_cats') %></h3>
    <%= render 'categories', categories: @brands %>
  </div>

  <div class="col-lg-12 mt-3 mb-5">
    <h3><%= t('.special_cats') %></h3>
    <%= render 'categories', categories: @special %>
  </div>
</div>
