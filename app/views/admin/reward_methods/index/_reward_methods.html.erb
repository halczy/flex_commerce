<table class="table table-hover">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Type</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
    <% @reward_methods.each do |reward_method| %>
      <tr>
        <td>
          <%= link_to reward_method.id, admin_reward_method_path(reward_method) %>
        </td>
        <td>
          <%= link_to reward_method.name, admin_reward_method_path(reward_method) %>
        </td>
        <td>
          <%= reward_method.variety.titleize %>
        </td>
        <%= render 'admin/reward_methods/index/action_control',
                    reward_method: reward_method %>
      </tr>
    <% end %>
    <% if @reward_methods.empty? %>
      <tr><td colspan="5">No Reward Method Available</td></tr>
    <% end %>
  </tbody>
</table>
