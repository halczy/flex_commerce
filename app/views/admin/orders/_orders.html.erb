<table class="table table-hover">
  <thead>
    <th>ID</th>
    <th>Status</th>
    <th>Customer</th>
    <th>Total</th>
    <th></th>
  </thead>
  <tbody>
    <% if orders.present? %>
      <% orders.each do |order| %>
      <tr>
        <td><%= link_to order.id, admin_order_path(order) %></td>
        <td><%= order.status.titleize %></td>
        <td><%= link_to order.user.name, '#' %></td>
        <td>
          <% if order.status_before_type_cast >= 20 %>
            <%= humanized_money_with_symbol order.total %>
          <% else %>
            <%= humanized_money_with_symbol order.pre_confirm_total %>
          <% end %>
        </td>
        <td>
          <%= link_to 'Detail', admin_order_path(order), class: 'btn btn-info btn-sm' %>
        </td>
      </tr>
      <% end %>
    <% else %>
      <tr>
        <td colspan="5">No Matching Order</td>
      </tr>
    <% end %>
  </tbody>
</table>
