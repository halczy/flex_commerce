<%= form_with(url: admin_orders_path, local: true, method: :get) do |form| %>
  <%= form.select :status, options_for_select([
                  [t('.no_filter'), ''],
                  [t('.created'), 'created'],
                  [t('.shipping_confirmed'), 'shipping_confirmed'],
                  [t('.confirmed'), 'confirmed'],
                  [t('.payment_pending'), 'payment_pending'],
                  [t('.partial_payment'), 'partial_payment'],
                  [t('.payment_fail'), 'payment_fail'],
                  [t('.payment_success'), 'payment_success'],
                  [t('.staff_confirmed'), 'staff_confirmed'],
                  [t('.pickup_pending'), 'pickup_pending'],
                  [t('.shipped'), 'shipped'],
                  [t('.completed'), 'completed']]),
                  { prompt: t('.filter_orders') },
                  class: 'form-control', onchange: 'this.form.submit();' %>
<% end %>
