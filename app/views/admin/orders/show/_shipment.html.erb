<% if @delivery.present? %>
  <div class="col">
    <div class="jumbotron">
      <h4><%= t('.delivery') %></h4>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row"><%= t('.address') %></th>
            <td><%= @order.address.full_address %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('.recipient') %></th>
            <td><%= @order.address.recipient %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('.contact_number') %></th>
            <td><%= @order.address.contact_number %></td>
          </tr>
          <tr>
            <th scope="row"><%= t('.shipping_company') %></th>
            <td><%= @order.shipping_company %></td>
          </tr>
          <tr>
            <th scope='row'><%= t('.tracking_number') %></th>
            <td><%= @order.tracking_number %></td>
          </tr>
          <tr>
            <th scope='row'><%= t('.shipped_at') %></th>
            <td>
              <% if @order.shipped_at %>
                <%= DateTime.parse(@order.shipped_at).strftime("%Y/%m/%d") %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th scope="row"><%= t('.shipping_completed_at') %></th>
            <td>
              <% if @order.shipping_completed_at %>
                <%= DateTime.parse(@order.shipping_completed_at).strftime("%Y/%m/%d") %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
