<div class="col">
  <div class="jumbotron">
    <h4>Delivery</h4>
    <table class="table">
      <tbody>
        <tr>
          <th scope="row">Shipping Company</th>
          <td><%= @order.shipment['shipping_company'] %></td>
        </tr>
        <tr>
          <th scope='row'>Tracking Number</th>
          <td><%= @order.shipment['tracking_number'] %></td>
        </tr>
        <tr>
          <th scope='row'>Shipped At</th>
          <td>
            <% if @order.shipment['shipped_at'] %>
              <%= DateTime.parse(@order.shipment['shipped_at']).strftime("%Y/%m/%d") %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th scope="row">Shipping Completed At</th>
          <td>
            <% if @order.shipment['shipping_completed_at'] %>
              <%= DateTime.parse(@order.shipment['shipping_completed_at']).strftime("%Y/%m/%d") %>
            <% end %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</div>
