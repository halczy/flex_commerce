<% if @delivery.present? %>
  <div class="col">
    <div class="jumbotron">
      <h4>Delivery</h4>
      <table class="table">
        <tbody>
          <tr>
            <th scope="row">Address</th>
            <td><%= @order.address.full_address %></td>
          </tr>
          <tr>
            <th scope="row">Recipient</th>
            <td><%= @order.address.recipient %></td>
          </tr>
          <tr>
            <th scope="row">Contact Number</th>
            <td><%= @order.address.contact_number %></td>
          </tr>
          <tr>
            <th scope="row">Shipping Company</th>
            <td><%= @order.shipping_company %></td>
          </tr>
          <tr>
            <th scope='row'>Tracking Number</th>
            <td><%= @order.tracking_number %></td>
          </tr>
          <tr>
            <th scope='row'>Shipped At</th>
            <td>
              <% if @order.shipped_at %>
                <%= DateTime.parse(@order.shipped_at).strftime("%Y/%m/%d") %>
              <% end %>
            </td>
          </tr>
          <tr>
            <th scope="row">Shipping Completed At</th>
            <td>
              <% if @order.shipping_completed_at %>
                <%= DateTime.parse(@order.shipping_completed_at).strftime("%Y/%m/%d") %>
              <% end %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
<% end %>
