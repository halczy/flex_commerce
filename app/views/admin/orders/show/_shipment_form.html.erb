<!-- Add Shipment Modal -->
<div class="modal fade" id="ship_<%= @order.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Add Shipment</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_with(url: add_tracking_admin_order_path, local: true) do |f| %>
        <div class="modal-body">
          <div class="row form-group">
            <div class="col-6">
              <%= f.label :shipping_company, 'Shipping Company' %>
              <%= f.text_field :shipping_company, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label :tracking_number, 'Tracking Number' %>
            <%= f.text_field :tracking_number, class: 'form-control' %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.submit 'Submit', class: 'btn btn-primary' %>
          <button type="button" class="btn btn-secondary" data-dismiss="modal">
            Close
          </button>
      <% end %>
      </div>
    </div>
  </div>
</div>
