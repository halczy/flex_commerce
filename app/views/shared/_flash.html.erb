<% flash.each do |message_type, message| %>
  <div class="alert-<%= message_type %>">
    <div class="container">
      <div class="d-flex justify-content-center p-3">
        <div>
          <i class="fa <%= alert_icon(message_type)%> mr-1" aria-hidden="true"></i>
          <%= message %>
        </div>
      </div>
    </div>
  </div>
<% end %>
