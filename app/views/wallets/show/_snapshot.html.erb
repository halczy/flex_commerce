<div class="card-deck">
  <div class="card text-white bg-info mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <div class="ml-3">
          <div class="row">
            <h4>Balance</h4>
          </div>
          <div class="row">
            <h4><%= humanized_money_with_symbol @wallet.balance %></h4>
          </div>
        </div>
        <div>
          <i class="fa fa-money fa-4x"></i>
        </div>
      </div>
    </div>
  </div>
  <div class="card text-white bg-secondary mb-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <div class="ml-3">
          <div class="row">
            <h4>Pending Amount</h4>
          </div>
          <div class="row">
            <h4><%= humanized_money_with_symbol @wallet.pending %></h4>
          </div>
        </div>
        <div>
          <i class="fa fa-credit-card fa-4x"></i>
        </div>
      </div>
    </div>
  </div>
</div>
