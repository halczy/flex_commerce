<div class="card">
  <div class="card-header">
    <%= t('.header') %>
  </div>
  <div class="card-body">
    <%= render 'wallets/show/snapshot' %>
    <%= render 'wallets/show/action_control' %>
    <div class="d-flex justify-content-between align-items-center mt-5">
      <h5><%= t('.recent_transactions') %></h5>
      <div class="mb-1">
        <%= link_to show_transactions_wallet_path(@wallet), class: 'btn btn-secondary' do %>
           <i class="fa fa-exchange" aria-hidden="true"></i> <%= t('.all_transactions') %>
        <% end %>
        <%= link_to show_transfer_ins_wallet_path(@wallet), class: 'btn btn-secondary' do %>
          <i class="fa fa-chevron-circle-right" aria-hidden="true"></i> <%= t('.transfer_ins') %>
        <% end %>
        <%= link_to show_transfer_outs_wallet_path(@wallet), class: 'btn btn-secondary' do %>
          <i class="fa fa-chevron-circle-left" aria-hidden="true"></i> <%= t('.transfer_outs') %>
        <% end %>
      </div>
    </div>
    <%= render 'shared/no_record' if @transactions.empty? %>
    <% @transactions.each do |transaction| %>
      <%= render 'wallets/shared/transaction', transaction: transaction %>
    <% end %>
  </div>
</div>
