<div class="list-group-item flex-column">
  <div class="d-flex justify-content-between">
    <h6><%= t('.transferer') %>: <%= transfer.transferer.name %></h6>
    <h6>
      <%= t('.amount') %>: <%= humanized_money_with_symbol transfer.amount %>
    </h6>
  </div>
  <div class="d-flex justify-content-between">
    <h6><%= t('.transferee') %>: <%= transfer.transferee.name %></h6>
  </div>
  <div class="d-flex justify-content-between">
    <small class="text-muted">
      <%= t('.transfer_id') %>: <%= transfer.id %>
    </small>
    <small>
      <%= t('.transferred_at') %>:
      <%= transfer.created_at.strftime("%Y/%m/%d") %>
    </small>
  </div>
</div>
