<%= provide :title, 'Wallet Transactions' %>

<%= render 'shared/header_breadcrumb', title: yield(:title) %>

<div class="container mt-5">
  <div class="row">
    <div class="col-3">
      <%= render 'shared/navigation/customer/sidenav' %>
    </div>
    <div class="col-9">
      <div class="card">
        <div class="card-header">
          <%= yield(:title) %>
        </div>
        <div class="card-body">
          <%= render 'wallets/show_transactions/action_control' %>
          <div class="row">
            <%= render 'shared/paginate', objects: @transactions if @transactions.present? %>
            <div class="col-lg-12">
              <p>Transaction Count: <%= @transactions.total_count %></p>
            </div>
            <div class="col-lg-12">
              <% @transactions.each do |transaction| %>
                <%= render 'wallets/shared/transaction', transaction: transaction %>
              <% end %>
            </div>
            <%= render 'shared/paginate', objects: @transactions if @transactions.present? %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
