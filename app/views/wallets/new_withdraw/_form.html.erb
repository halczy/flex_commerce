<%= form_with(url: create_withdraw_wallet_path(@user), local: true) do |f| %>

  <div class="form-group row">
    <div class="col-md">
      <%= f.label :processor, t('.withdraw_to') %>
      <%= f.select :processor, options_for_select(@processors),
                               {}, { class: 'form-control' } %>
    </div>
    <div class="col-md">
      <%= f.label :amount, t('.amount') %>
      <%= f.number_field :amount, step: :any, class: 'form-control' %>
    </div>
  </div>

  <div class="d-flex justify-content-end">
    <%= f.submit t('.submit'), class: 'btn btn-primary' %>
  </div>
<% end %>
