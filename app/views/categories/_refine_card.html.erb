<% unless @category.refine.empty? %>
  <div class="card mt-3">
    <div class="card-body">
      <h4 class="card-title">
        <% if @category.regular? %>
          <%= t('.brands') %>
        <% elsif @category.brand? %>
          <%= t('.categories') %>
        <% end %>
      </h4>
      <div class="ml-1">
        <% @category.refine.each do |category| %>
          <% cache category do %>
            <li>
              <%= link_to category.name, category_path(category) %>
              (<%= category.products.count %>)
            </li>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
<% end %>
