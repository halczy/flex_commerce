<div class="card">
  <div class="card-header">
    Reward
  </div>
  <div class="card-body">
    <%= render 'rewards/show/snapshot' %>
    <div class="row">
      <%= render 'shared/paginate', objects: @rewards if @rewards.present? %>
      <div class="col-lg-12">
        <%= render 'shared/no_record' if @rewards.empty? %>
        <% @rewards.each do |transaction| %>
          <%= render 'rewards/show/transaction', transaction: transaction %>
        <% end %>
      </div>
      <%= render 'shared/paginate', objects: @rewards if @rewards.present? %>
    </div>
  </div>
</div>
