<div class="card h-100">
  <%= image_tag product.images.first.image_url(:thumb), class: 'card-img-top' %>
  <div class="card-body">
    <h4 class="card-title"><%= product.name %></h4>
    <p class="card-text">
      <%= product.introduction.html_safe %>
    </p>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col mb-1 mt-1">
        <%= link_to '#', class: 'btn btn-info btn-block' do %>
          <i class="fa fa-columns" aria-hidden="true"></i>
          Detail
        <% end %>
      </div>
      <div class="col mb-1 mt-1">
        <%= link_to '#', class: 'btn btn-success btn-block' do %>
          <i class="fa fa-cart-plus" aria-hidden="true"></i>
          Add to Cart
        <% end %>
      </div>
    </div>
  </div>
</div>
