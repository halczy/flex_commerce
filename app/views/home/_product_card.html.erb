<div class="card h-100">
  <%= image_tag product.images.first.image_url(:thumb), class: 'card-img-top w-100' %>
  <div class="card-block">
    <h4 class="card-title"><%= product.name %></h4>
    <p class="card-text">
      <%= product.introduction.html_safe %>
    </p>
  </div>
  <div class="card-footer">
    <div class="row">
      <div class="col">
    <%= link_to 'Detail', '#', class: 'btn btn-info btn-block' %>

      </div>
      <div class="col">
    <%= link_to 'Add to Cart', '#', class: 'btn btn-success btn-block' %>

      </div>
    </div>
  </div>
</div>
