<%= provide :title, 'Address' %>

<div class="container">
  <div class="card mt-5">
    <div class="card-header">
      <%= yield(:title) %>
    </div>
    <div class="card-body">
      <%= render 'self_pickup' if @self_pickups.present? %>
      <%= render 'address_form' if @deliveries.present? %>
      <input type="submit" form="address_form" />
    </div>
  </div>
</div>
