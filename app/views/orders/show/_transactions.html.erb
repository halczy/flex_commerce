<% if @order.transactions %>
  <h4>transactions</h4>
  <div class="list-group">
    <% @order.transactions.each do |transaction| %>
      <div class="list-group-item flex-column">
        <div class="d-flex justify-content-between">
          <h6>Amount: <%= humanized_money_with_symbol transaction.amount %></h6>
          <h6>Source: <%= payment_source(transaction) %></h6>
        </div>
        <div class="d-flex justify-content-between">
          <small class="text-muted">transaction ID: <%= transaction.id %></small>
          <small><%= transaction.created_at.strftime("Paid at: %Y/%m/%d") %></small>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
