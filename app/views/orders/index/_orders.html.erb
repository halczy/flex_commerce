<%= render 'shared/no_record' if @orders.empty? %>
<div class="list-group">
  <% @orders.each do |order|  %>
    <%= link_to order, class: 'list-group-item list-group-item-action flex-column
                               align-items-start' do %>
      <div class="d-flex w-100 justify-content-between">
        <small class="text-muted">Order ID: <%= order.id %></small>
        <h5 class="mt-1"><%= order.status.titleize %></h5>
      </div>
      <% order.products.each do |product| %>
        <div class="d-flex w-100 justify-content-between">
          <p class="">
            <%= order.inventories_by(product).count %> x
            <%= product.name %></p>
          </p>
          <p class="subtotal">
            <%= humanized_money_with_symbol subtotal_by(order, product) %>
          </p>
        </div>
      <% end %>
      <div class="d-flex w-100 justify-content-between">
        <small>
          <%= order.created_at.strftime("Created: %Y/%m/%d") %>
        </small>
        <% if order.status_before_type_cast <= 10 %>
          <h6>Total: <%= humanized_money_with_symbol order.pre_confirm_total %></h6>
        <% else %>
          <h6>Total: <%= humanized_money_with_symbol order.total %></h6>
        <% end %>
      </div>
    <% end %>
  <% end %>
</div>
