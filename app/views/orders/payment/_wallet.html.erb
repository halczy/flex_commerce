<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <h5><%= t('.pay_with_wallet') %></h5>
      <div class="row">
        <div class="col-md-6">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th scope="row" class="w-50"><%= t('.wallet_balance') %>: </th>
                <td class="text-left">
                  <%= humanized_money_with_symbol current_user.wallet.available_fund %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-md-6">
          <%= render 'orders/payment/wallet_form' %>
        </div>
      </div>
    </div>
  </div>
</div>
