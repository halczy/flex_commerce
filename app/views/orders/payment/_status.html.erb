<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <h5>Payment Summary</h5>
      <div class="row">
        <div class="col-md-6">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th scope="row" class="w-25">Order Total:</th>
                <td class="text-left">
                  <%= humanized_money_with_symbol @order.total %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="w-25">Amount Paid:</th>
                <td class="text-left">
                  <%= humanized_money_with_symbol @order.amount_paid %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="w-50">Unpaid Balance:</th>
                <td class="text-left">
                  <%= humanized_money_with_symbol @order.amount_unpaid %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="w-25">Order Status:</th>
                <td class="text-left">
                  <%= @order.status.titleize %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
