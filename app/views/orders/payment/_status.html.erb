<div class="row">
  <div class="col-md-12">
    <div class="jumbotron">
      <h5><%= t('.payment_summary') %></h5>
      <div class="row">
        <div class="col-md-6">
          <table class="table table-hover">
            <tbody>
              <tr>
                <th scope="row" class="w-50"><%= t('.order_total') %>:</th>
                <td class="text-left">
                  <%= humanized_money_with_symbol @order.total %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="w-50"><%= t('.amount_paid') %>:</th>
                <td class="text-left">
                  <%= humanized_money_with_symbol @order.amount_paid %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="w-50"><%= t('.unpaid_balance') %>:</th>
                <td class="text-left">
                  <%= humanized_money_with_symbol @order.amount_unpaid %>
                </td>
              </tr>
              <tr>
                <th scope="row" class="w-50"><%= t('.order_status') %>:</th>
                <td class="text-left">
                  <%= @order.translated_status %>
                </td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
