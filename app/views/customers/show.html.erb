<%= provide :title, t('.title') %>

<%= render 'shared/header_breadcrumb', title: yield(:title) %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/navigation/customer/sidenav' %>
    </div>
    <div class="col-md-9">
      <div class="jumbotron">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-2">
              <%= t('.email') %>: <%= current_user.email %>
            </div>
            <div class="mb-2">
              <%= t('.cell_number') %>: <%= current_user.cell_number %>
            </div>
            <% if current_user.referer %>
              <div class="mb-2">
                <%= t('.referer') %>: <%= current_user.referer.try(:name) || current_user.referer.member_id %>
              </div>
            <% end %>
            <div class="mb-2">
              <%= t('.ref_link') %>: <input type="text" value="<%= ref_link %>" disabled>
            </div>
            <div class="mt-3 mb-2">
              <%= link_to t('.modify'), edit_customer_path(current_user), class: 'btn btn-info' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="list-group">
              <div class="list-group-item list-group-item-action">
                <div class="text-center">
                  <h3><%= current_user.name || t('.customer') %></h3>
                  <h3><%= convert_to_dashed_id(current_user.member_id) %></h3>
                  <h5><%= t('.member_id') %></h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
