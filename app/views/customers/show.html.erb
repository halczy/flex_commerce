<%= provide :title, 'Profile' %>

<%= render 'shared/header_breadcrumb', title: yield(:title) %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-3">
      <%= render 'shared/navigation/customer/sidenav' %>
    </div>
    <div class="col-md-9">
      <div class="jumbotron">
        <div class="row">
          <div class="col-md-6">
            <div class="mb-2">
              Email: <%= current_user.email %>
            </div>
            <div class="mb-2">
              Cell Number: <%= current_user.cell_number %>
            </div>
            <div class="mt-2 mb-2">
              <%= link_to 'Add/Modify Profile', '#', class: 'btn btn-info' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="list-group">
              <div class="list-group-item list-group-item-action">
                <div class="text-center">
                  <h3><%= current_user.name %></h3>
                  <h3><%= convert_to_dashed_id(current_user.member_id) %></h3>
                  <h5>Membership ID</h5>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>





