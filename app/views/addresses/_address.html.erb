<div class="list-group-item list-group-item-action flex-column">
  <div class="d-flex justify-content-between">
    <h5 class="mb-1">
      <%= address.recipient %>
      <%= " (#{address.name})" if address.name.present? %>
    </h5>
    <div class="actions">
      <%= link_to edit_address_path(address), id: "edit_#{address.id}",
                                              class: 'text-muted mr-2' do %>
        <i class="fa fa-lg fa-pencil-square" aria-hidden="true"></i>
      <% end %>
      <%= link_to '#', id: "btn_del_#{address.id}", class: 'text-muted',
            data: { toggle: "modal", target: "#delete_#{address.id}"} do %>
        <i class="fa fa-lg fa-trash" aria-hidden="true"></i>
      <% end %>
    </div>
  </div>
  <p class="mb-0"><%= address.full_address %></p>
  <small><%= t('.contact_number') %> <%= address.contact_number %></small>
</div>

<!-- Confirm Delete Modal -->
<div class="modal fade" id="delete_<%= address.id %>">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"><%= t('.delete_address') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p><%= t('.delete_msg') %></p>
      </div>
      <div class="modal-footer">
        <%= link_to t('.confirm'), address, method: :delete,
                                   id: "confirm_del_#{address.id}",
                                   class: 'btn btn-danger' %>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">
          <%= t('.close') %>
        </button>
      </div>
    </div>
  </div>
</div>
